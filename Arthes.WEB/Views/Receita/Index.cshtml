@model IEnumerable<Arthes.DATA.Models.ModelReceita>

@{
    ViewData["Title"] = "Index";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h1>Listagem de Receitas</h1>

<p>
    <a class="btn btn-success" asp-action="Create"><i class="fa fa-book"></i>&ensp; Nova Receita</a>
</p>
<br />
<table id="tabReceita" class="table table-striped table-hover">
    <thead>
        <tr>
            <th>
                @Html.Label("Nome")
            </th>
            <th>
                @Html.Label("Diculdade")
            </th>
            <th>
                @Html.Label("Altura (cm)")
            </th>
            <th>
                @Html.Label("Tema Revista")
            </th>
            <th>Ações</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
            <tr>
                <td>
                    @Html.DisplayFor(modelItem => item.Nome)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Dificuldade)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Altura)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item._ModelRevista.Tema)
                </td>
                <td>
                    <a class="btn btn-primary" asp-action="Edit" asp-route-id="@item.Id"><i class="fa fa-edit"></i></a>
                    <a class="btn btn-secondary" asp-action="Details" asp-route-id="@item.Id"><i class="fa fa-search"></i></a>
                    @*<a class="btn btn-danger" asp-action="Delete" asp-route-id="@item.Id"><i class="fa fa-trash"></i></a>*@

                    <!-- Button trigger modal -->
                    <button type="button" class="btn btn-danger" data-bs-toggle="modal" data-bs-target="#DeleteModal-@item.Id">
                        <i class="fa fa-trash"></i>
                    </button>

                    <!-- Modal -->
                    <div class="modal fade" id="DeleteModal-@item.Id" tabindex="-1" aria-labelledby="DeleteModalLabel" aria-hidden="true">
                        <div class="modal-dialog">
                            <div class="modal-content">
                                <div class="modal-header">
                                    <h5 class="modal-title" id="DeleteModalLabel">Exclusão de Registro</h5>
                                    <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
                                </div>
                                <div class="modal-body">
                                    Deseja excluir a Receita: <i class="text-danger">@item.Nome?</i>
                                </div>
                                <div class="modal-footer">
                                    <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Não</button>
                                    <a class="btn btn-danger" asp-action="Delete" asp-route-id="@item.Id">Sim</a>
                                </div>
                            </div>
                        </div>
                    </div>


                </td>
            </tr>
        }
    </tbody>
</table>

@section Scripts {
    <script>
        $(document).ready(function() {
            $('#tabReceita').DataTable({
                language: {
                    search: 'Buscar por...',
                    url: 'https://cdn.datatables.net/plug-ins/1.11.5/i18n/pt-BR.json'
                }
            });
        });
    </script>
    <script src="https://kit.fontawesome.com/e2c43ebad4.js" crossorigin="anonymous"></script>
}
