@model Arthes.DATA.Models.ModelRevista

@{
    ViewData["Title"] = "Create";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h1>Revista</h1>
<hr />
<h4>Detalhes</h4>
<br />
    <div asp-validation-summary="ModelOnly" class="text-danger"></div>
    <div class="card">

        <div class="card-header">
            Detalhes da Revista
        </div>

        <div class="card-body row">
            <div class="col-md-12 row camposEdicao">

                <div class="form-group">
                    <label asp-for="Tema" class="control-label"></label>
                    <input disabled asp-for="Tema" class="form-control" />
                </div>
            </div>
            <div class="col-md-12 row camposEdicao">
                <div class="form-group col-md-2">
                    <label asp-for="NumeroEdicao" class="control-label">Número Edição</label>
                    <input disabled asp-for="NumeroEdicao" class="form-control" />
                </div>
                <div class="form-group col-md-2">
                    <label asp-for="MesEdicao" class="control-label">Mês Edição</label>
                    <input disabled asp-for="MesEdicao" class="form-control" />
                </div>
                <div class="form-group col-md-2">
                    <label asp-for="AnoEdicao" class="control-label">Ano Edição</label>
                    <input disabled asp-for="AnoEdicao" class="form-control" />
                </div>
                <div class="form-group col-md-6">
                    <label asp-for="Photo" class="control-label"></label>
                    <input disabled type="file" asp-for="Photo" class="form-control" />
                </div>
            </div>

            <p></p>
            <div class="col-md-12 row camposEdicao">
                <div class="form-group col-md-6">
                    <a class="btn btn-primary p-2" asp-action="Edit" asp-route-id="@Model?.Id"><i class="fa fa-edit"></i>&ensp;Editar</a>
                    <a class="btn btn-warning p-2" asp-action="Index"><i class="fa-solid fa-arrow-rotate-left"></i>&ensp;Voltar</a>
                </div>
            </div>
        </div>
    </div>



@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}

